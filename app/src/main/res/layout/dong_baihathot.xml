<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:layout_margin="3dp"
    android:scaleType="fitXY"
    android:id="@+id/imgViewBaiHatHot"
    android:layout_width="80dp"
    android:layout_height="80dp" />
    <TextView
        android:text="Ten Bai Hat "
        android:textStyle="bold"
        android:textSize="20sp"
        android:maxLines="1"
        android:layout_toRightOf="@id/imgViewBaiHatHot"
        android:ellipsize="end"
        android:textColor="#e79191"
        android:id="@+id/tvBaiHatHot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:singleLine="true"
        android:text="Ten Ca Si"
        android:textColor="#0e1dec"
        android:layout_toRightOf="@id/imgViewBaiHatHot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/tvBaiHatHot"
        android:id="@+id/tvCaSiBaiHatHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:layout_centerVertical="true"
        android:id="@+id/imgViewLuotThich"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>