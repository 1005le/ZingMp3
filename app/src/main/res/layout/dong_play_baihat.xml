<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <RelativeLayout
      android:padding="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
          android:layout_margin="10dp"
          android:text="1"
          android:textColor="#e9c2c2"
          android:textSize="17sp"
          android:id="@+id/tvPlayNhacIndex"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tvPlayNhacTenBaiHat"
          android:textSize="20sp"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/tvPlayNhacIndex"
          android:ellipsize="end"
          android:maxWidth="250dp"
          android:singleLine="true"
          android:text="Ten Ca Khuc"
          android:textColor="#ea1616"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tvPlayNhacTenCaSi"
          android:text="20sp"
        android:layout_below="@id/tvPlayNhacTenBaiHat"
          android:layout_toRightOf="@+id/tvPlayNhacIndex"
          android:singleLine="true"
          android:ellipsize="end"
          android:textSize="15sp"
          android:textColor="#0d0abc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

  </RelativeLayout>
</RelativeLayout>