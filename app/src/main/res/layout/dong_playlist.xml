<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:layout_marginTop="5dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:id="@+id/imgBackGroudPlaylist"
    android:scaleType="fitXY"
    android:layout_width="match_parent"
    android:layout_height="80dp" />
    <View
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/imgBackGroudPlaylist"
        android:scaleType="fitXY"
        android:id="@+id/imgIconPlaylist"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:text="Nhung bai hit cu "
        android:textSize="13sp"
        android:layout_alignBottom="@id/imgIconPlaylist"
        android:textStyle="bold"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/imgIconPlaylist"
        android:textColor="#e71111"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:id="@+id/tvTemPlaylist"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>