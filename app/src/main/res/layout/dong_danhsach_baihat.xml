<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/tvSTT"
        android:hint="1"
        android:textSize="15dp"
        android:textColor="#000"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />
    <TextView
        android:maxLines="1"
    android:layout_toRightOf="@+id/tvSTT"
    android:text="Ten Bai Hat"
    android:textSize="20sp"
    android:textColor="#000"
    android:id="@+id/tvTenBaiHatDanhSach"
    android:layout_marginTop="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:maxLines="1"
        android:layout_toRightOf="@+id/tvSTT"
        android:text="Ten Ca Si"
        android:layout_below="@+id/tvTenBaiHatDanhSach"
        android:textSize="15sp"
        android:textColor="#000"
        android:id="@+id/tvTenCaSiDanhSach"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/imgluotThichDanhSach"
        android:layout_width="40dp"
        android:layout_height="40dp" />
   </RelativeLayout>
</android.support.v7.widget.CardView>